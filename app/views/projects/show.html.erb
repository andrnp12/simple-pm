<%= link_to 'Kembali', projects_path, class: 'btn btn-secondary mb-3' %>
<div class="card">
  <div class="card-body">
    <h2 class='card-tittle d-flex justify-content-between mb-4'>
      <span><%= @project.name %></span>
      <div>
        <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-light' %>
        <%= link_to 'Hapus', @project, method: :delete, class: 'btn btn-dark', data: { confirm: 'Apakah anda yakin?' } %>
      </div>
    </h2>

    <div class="mb-4">
      <h6>Tambah Tugas Baru</h6> 
      <%= form_for([@task.project, @task]) do |f| %>
        <% if @task.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

            <ul>
            <% @task.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.hidden_field :status, value: 'not-started' %>
        <div class="input-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Masukan nama task..' %>
            <div class="input-group-append">
              <%= f.submit class: 'btn btn-primary' %>
            </div>
        </div>
      <% end %>
    </div>

    <h4>Daftar Tugas</h4>
    <% @project.tasks.each do |task| %>
      <% if task.persisted? %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between">
            <span class="badge badge-<%= task.color_class %> mb-3"><%= task.status %></span>
            <div>
              <%= link_to 'Edit', edit_project_task_path(task.project, task), class: 'btn btn-light btn-sm' %>
              <%= link_to 'Hapus', [task.project, task], method: :delete, data: { confirm: 'Apakah anda yakin?' }, class: 'btn btn-dark btn-sm' %>
            </div>
          </div>
          <h5 class='card-tittle mb-2'>
            <span><%= task.name %></span>
          </h5>
          <p><%= task.description %></p>
        </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>